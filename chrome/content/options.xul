<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<?xml-stylesheet href="chrome://teatimer/skin/options.css" type="text/css"?>
<window title="TeaTimer - Options" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
    <script type="application/x-javascript" src="chrome://teatimer/content/teaTimerCommon.js" />
    <script type="application/x-javascript" src="chrome://teatimer/content/teaTimerTeaDB.js" />
    <script type="application/x-javascript" src="chrome://teatimer/content/options.js" />
    
    <tabbox>
        <tabs>
            <tab label="Tea varities" />
            <tab label="Alerts" />
        </tabs>
        <tabpanels>
            <tabpanel id="teaTimer-optionsVaritiesTab">
                <vbox flex="1">
                    <groupbox>
                        <caption label="Add a new tea" />
                        <hbox align="end">
                            <vbox flex="1">
                                <label control="teaTimer-optionsNewTeaName" value="Tea" />
                                <textbox id="teaTimer-optionsNewTeaName" />
                            </vbox>
                            <vbox>
                                <label control="teaTimer-optionsNewTeaTime" value="Time" />
                                <textbox id="teaTimer-optionsNewTeaTime" />
                            </vbox>
                            <button id="teaTimer-optionsBtnAddTea" label="Add" />
                        </hbox>
                    </groupbox>
                    
					<groupbox>
						<caption label="Manage existing teas" />
						
						<tree id="teaTimer-optionsTeas" hidecolumnpicker="true" editable="true">
							<treecols  editable="true">
							<treecol label="ID" id="teaTimer-optionsTeas-idColumn" hidden="true" />
							<treecol label="Tea" id="teaTimer-optionsTeas-teaColumn" type="text" editable="true" flex="2" />
							<treecol label="Time" id="teaTimer-optionsTeas-timeColumn" type="text" editable="true" flex="1" />
							</treecols>
							<treechildren id="teaTimer-optionsTeasTreeChildren">
							<!--
							<treeitem>
								<treerow>
								<treecell label="1" />
								<treecell editable="true" label="Earl Grey" />
								<treecell editable="true" label="3:00" />
								</treerow>
							</treeitem>
							<treeitem>
								<treerow>
								<treecell label="2" />
								<treecell editable="true" label="Rooibos" />
								<treecell editable="true" label="7:00" />
								</treerow>
							</treeitem>
							-->
							</treechildren>
						</tree>
                    </groupbox>
                    <hbox align="right">
                        <button id="teaTimer-optionsBtnDelTea" label="Delete selected tea" disabled="true" />
                    </hbox>
                </vbox>
            </tabpanel>
            <tabpanel id="teaTimer-optionsAlertsTab">
				<vbox>
				<groupbox>
					<caption label="General Alerts" />
					<checkbox id="teaTimer-optionsPopupAlert" label="Show dialog window when timer finishes" />
					<checkbox id="teaTimer-optionsStatusbarAlert" label="Blink statusbar when timer finishes" />
				</groupbox>
                <groupbox>
                    <caption label="Sound Alerts" />
                    <vbox>
                        <hbox align="center">
                            <label control="teaTimer-optionsStartSound" value="Play this sound, when timer is started:" />
                            <spacer flex="1" />
                            <menulist id="teaTimer-optionsStartSound">
                                <menupopup>
                                    <menuitem label="None" value="none" />
                                    <menuitem label="Cup" value="cup" />
                                    <menuitem label="Egg Timer" value="eggtimer" />
                                    <menuitem label="Pour" value="pour" />
                                </menupopup>
                            </menulist>
                            <button id="teaTimer-optionsBtnPreviewStartSound" label="Preview" />
                        </hbox>
                        
                        <hbox align="center">
                            <label control="teaTimer-optionsEndSound" value="Play this sound, when timer finishes:" />
                            <spacer flex="1" />
                            <menulist id="teaTimer-optionsEndSound">
                                <menupopup>
                                    <menuitem label="None" value="none" />
                                    <menuitem label="Egg Timer" value="eggtimer" />
                                    <menuitem label="Fanfare" value="fanfare" />
                                    <menuitem label="Slurp" value="slurp" />
                                    <menuitem label="Speech" value="speech" />
                                </menupopup>
                            </menulist>
                            <button id="teaTimer-optionsBtnPreviewEndSound" label="Preview" />
                        </hbox>
                    </vbox>  
                </groupbox>
				</vbox>
            </tabpanel>
        </tabpanels>
    </tabbox>
    
    <hbox align="right">
        <button label="Cancel" id="teaTimer-optionsWinBtnCancel" accesskey="c" />
        <button label="OK" id="teaTimer-optionsWinBtnOk" accesskey="o" />
    </hbox>
</window>