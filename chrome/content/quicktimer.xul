<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<?xml-stylesheet href="chrome://teatimer/skin/quicktimer.css" type="text/css"?>
<window title="TeaTimer - Quick Timer" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
    <script type="application/x-javascript" src="chrome://teatimer/content/quicktimer.js" />
    
    <vbox>
	<label control="teaTimer-qtTime" value="Please enter the custom countdown time:" />
        <textbox id="teaTimer-qtTime" maxlength="6" accesskey="t" />
    </vbox>
    
    <checkbox id="teaTimer-qtChkStartCountdown" checked="true" label="Start countdown immediately after clicking OK." accesskey="s" />
    
    <hbox align="right">
        <button label="Cancel" id="teaTimer-qtBtnCancel" accesskey="c" />
        <button label="OK" id="teaTimer-qtBtnOk" accesskey="o" />
    </hbox>
</window>