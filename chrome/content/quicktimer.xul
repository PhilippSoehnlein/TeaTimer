<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<?xml-stylesheet href="chrome://teatimer/skin/quicktimer.css" type="text/css"?>
<!DOCTYPE window SYSTEM "chrome://teatimer/locale/teatimer.dtd">
<window title="&quicktimer.windowTitle;" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
    <script type="application/x-javascript" src="chrome://teatimer/content/teaTimerCommon.js" />
    <script type="application/x-javascript" src="chrome://teatimer/content/quicktimer.js" />
    
    <vbox>
		<label control="teaTimer-qtTime" value="&quicktimer.countdownTime.label;" />
        <textbox id="teaTimer-qtTime" maxlength="6" accesskey="&quicktimer.countdownTime.accesskey;" />
    </vbox>
    
    <checkbox id="teaTimer-qtChkStartCountdown" checked="true" label="&quicktimer.startCountdownRightNow.label;" accesskey="&quicktimer.startCountdownRightNow.accesskey;" />
    
    <hbox align="right">
        <button label="&quicktimer.buttons.cancel.label;" id="teaTimer-qtBtnCancel" accesskey="&quicktimer.buttons.cancel.accesskey;" />
        <button label="&quicktimer.buttons.ok.label;" id="teaTimer-qtBtnOk" accesskey="&quicktimer.buttons.ok.accesskey;" />
    </hbox>
</window>